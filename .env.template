GEMINI_API_KEY=gemini-api-key
MODEL_NAME=gemini-2.5-flash-preview-09-2025
ASSESSMENT_TEMPERATURE=0.6
ASSESSMENT_MAX_OUTPUT_TOKENS=512

# Audio Recording Settings
TEMP_FILE_EXTENSION=.wav
RECORDED_AUDIO_MIME_TYPE=audio/wav
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_BIT_DEPTH=16

# Voice Activity Detection (VAD) Settings
VAD_ENABLED=True
VAD_POSITIVE_SPEECH_THRESHOLD=0.8
VAD_NEGATIVE_SPEECH_THRESHOLD=0.4
VAD_MIN_SPEECH_FRAMES=3
VAD_PRESPEECH_PAD_FRAMES=1
VAD_REDEMPTION_FRAMES=8
VAD_FRAME_SAMPLES=1536
VAD_SUBMIT_USER_SPEECH_ON_PAUSE=True

# TTS Settings
TTS_MODEL_NAME=gemini-2.5-flash-preview-tts
TTS_VOICE_NAME=Puck
TTS_VOICE_STYLE_PROMPT=enthusiastic and encouraging tone for kids

# TTS Optimization
TTS_ASSETS_DIR=assets/tts
TTS_MANIFEST_PATH=assets/tts/manifest.json
TTS_CACHE_DIR=assets/tts/cache
TTS_CACHE_SIZE_MB=500
TTS_ENABLE_OPTIMIZATION=True
